@model gerenciamento_mercadoria.Models.EntradaViewModel

@{
    ViewBag.Title = "AtualizarEntrada";
    Layout = null;
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand text-white">Nome Aplicação</a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Mercadoria", "Index", "Mercadoria", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </div>
</nav>

<div class="container d-flex flex-column" style="width:90%;margin-top:2%">
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Mercadoria</h3>
                    <a href="#" class="close" data-dismiss="modal" onclick="redirectToIndex()">&times;</a>
                </div>
                <div class="modal-body">
                    <form id="myForm">

                        @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control" })

                        @Html.TextBoxFor(model => model.Data, new { @class = "form-control" })

                        @Html.TextBoxFor(model => model.Local, new { @class = "form-control" })

                        @Html.DropDownListFor(model => model.MercadoriaId, ViewBag.MercadoriaList as SelectList, "Selecione uma Mercadoria", new { @class = "form-control" })


                    </form>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-default" data-dismiss="modal" onclick="redirectToIndex()">Cancel</a>
                    <input type="reset" value="Atualizar" class="btn btn-success" id="btnSubimit" />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#myModal").modal("show");
    })

    function redirectToIndex() {
            window.location.href = '@Url.Action("Index", "Entrada")';
    }

    var url = '@Url.Action("AtualizarEntrada", "Entrada", new { id = Model.EntradaId })';

    $(document).ready(function () {
        $("#btnSubimit").click(function () {
            var myFormData = $("#myForm").serialize();

            $.ajax({
                type: "POST",
                url: url,
                data: myFormData,
                success: function () {
                    $('#myForm').trigger("reset");
                    $('#myModal').modal('hide');
                    window.location.href = '@Url.Action("Index", "Entrada")';
                }
            })
        })
    })
</script>